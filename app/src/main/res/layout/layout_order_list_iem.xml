<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardUseCompatPadding="true"
            android:padding="@dimen/order_item_spacing"
            app:cardElevation="3dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/order_item_id"
                    android:text="123456"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#181737"
                    android:textColor="#181737"
                    android:maxLength="30"
                    android:background="#0000"
                    android:gravity="left"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="@dimen/order_details_spacing"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01 Jan 2018 6:00 PM"
                        android:id="@+id/order_item_date"
                        android:textSize="@dimen/order_item_date_text_size"
                        />

                    <TextView
                        android:id="@+id/order_item_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/green"
                        android:gravity="right|center_vertical"
                        android:padding="@dimen/order_item_spacing"
                        android:text="DELIVERED"
                        android:textSize="@dimen/text_size_job"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/white"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/order_item_spacing">
                    <ImageView
                        android:id="@+id/order_item_service_image"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="left"
                        android:padding="@dimen/order_details_spacing"
                        android:src="@drawable/home_applinaces" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/order_item_service_name"
                        android:text="AC Servicing"
                        android:textColor="#000000"
                        android:maxLength="30"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/order_item_others_text_size"
                        android:padding="@dimen/order_details_spacing"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/order_item_spacing">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="left"
                        android:padding="@dimen/order_details_spacing"
                        android:src="@drawable/ic_locaion" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/order_item_address"
                        android:text="Dhaka, Bangladesh"
                        android:maxLength="300"
                        android:textColor="#000000"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/order_item_others_text_size"
                        android:padding="@dimen/order_details_spacing"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/jobhiddenid"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
</LinearLayout>
